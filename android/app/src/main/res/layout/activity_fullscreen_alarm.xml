<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullscreen_alarm_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">



    <!-- Time Card -->
    <LinearLayout
        android:id="@+id/alarm_time_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="3:04"
            android:textColor="@color/alarm_text_primary"
            android:textSize="104sp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="72sp"
            android:autoSizeMaxTextSize="104sp"
            android:autoSizeStepGranularity="2sp"
            android:lineHeight="104sp" />

        <!-- Class reminder badge (Moved here) -->
        <LinearLayout
            android:id="@+id/alarm_label_row"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/alarm_chip_background"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                android:tint="@color/alarm_text_secondary" />

            <TextView
                android:id="@+id/alarm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Class reminder"
                android:textColor="@color/alarm_text_secondary"
                android:textSize="14sp"
                android:letterSpacing="0.01"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/alarm_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Alarm stops in 08:00"
            android:textColor="@color/alarm_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Tue, Apr 23"
            android:textColor="@color/alarm_text_secondary"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Context Card: Next class + status pills -->
    <LinearLayout
        android:id="@+id/context_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alarm_time_card">

        <!-- Next class row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="@color/alarm_text_secondary" />

            <TextView
                android:id="@+id/next_class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Next: Math class at 3:30 PM"
                android:textColor="@color/alarm_text_primary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/button_column"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/alarm_button_stop"
            android:fontFamily="sans-serif"
            android:minHeight="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Stop"
            android:textAllCaps="false"
            android:textColor="@color/alarm_on_primary"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/snooze_button"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/alarm_button_snooze"
            android:fontFamily="sans-serif"
            android:minHeight="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Snooze 5 min"
            android:textAllCaps="false"
            android:textColor="@color/alarm_on_primary"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/view_reminders_button"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/alarm_button_tonal"
            android:fontFamily="sans-serif"
            android:minHeight="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="View dashboard"
            android:textAllCaps="false"
            android:textColor="@color/alarm_on_primary"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
